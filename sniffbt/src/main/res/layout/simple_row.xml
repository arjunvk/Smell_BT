<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sniffbtns="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <millennia.sniffbt.widget.TypefacedTextView
        android:id="@+id/simple_row_Txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        sniffbtns:typeface="@string/font_path"
        android:textSize="@dimen/list_view_item_text_size"/>

</LinearLayout>

